{
  "name": "heaviest-objects-in-the-universe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/copy-devicons.js",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "vue-tsc -b --noEmit",
    "lint": "eslint src --fix",
    "circular": "dpdm --circular --exit-code circular:1 'src/game/*.ts'",
    "lint:check": "eslint src",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "build:itch": "node scripts/copy-devicons.js && vue-tsc -b && BASE_URL=./ vite build && rm -f itch_assets/heaviest-objects-in-the-universe.zip && cd dist && zip -r ../itch_assets/heaviest-objects-in-the-universe.zip .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "pixi.js": "^8.14.3",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/tsconfig": "^0.8.1",
    "devicon": "^2.17.0",
    "dpdm": "^3.14.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "knip": "^5.78.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vue-tsc": "^3.2.1"
  }
}
